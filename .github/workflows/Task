name: Mixed inputs

on:
  workflow_dispatch:
    inputs:
      Task:
        type: Task
        description: Choose a Task
        options:
        - GET
        - UPDATE
        - CREATE
        
      Name:
      
      Description:
      
      Key1:
      Value1:
      
      Key2:
      Value2:
      
 
      
jobs:

  Task1:
    runs-on: [ ubuntu-latest]
    permissions:
        id-token: write
        contents: write
    steps:
      - name: "Configure AWS Credentials"
        uses: aws-actions/configure-aws-credentials@v1
        with:
          aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
          aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
          aws-session-token: ${{ secrets.AWS_SESSION_TOKEN }}
          aws-region: ap-southeast-1
          role-skip-session-tagging: true

      - name: AWS SecretsManager
        run: |
          aws configure set aws_session_token "${{ secrets.AWS_SESSION_TOKEN}}"
          aws secretsmanager create-secret --name ${{ github.event.inputs.Name}} --secret-string "{"Key1":"${{ github.event.inputs.Key1}}", "Value1":"${{ github.event.inputs.Value1}}", "Key2":"${{ github.event.inputs.Key2}}", "Value2":"${{ github.event.inputs.Value2}}", "Key3":"${{ github.event.inputs.Key3}}", "Value3":"${{ github.event.inputs.Value3}}"}" 
          
          
          
          
